<div class="container">
  <div class="blocks" data-reorder-url="<%= reorder_blocks_path %>">
    <%= render partial: 'superb_text_constructor/blocks/editor/block', collection: @blocks, as: :block %>
  </div>
</div>

<div class="container">
  <% SuperbTextConstructor.namespaces[@namespace].each do |group, blocks| %>
    <% if group == 'no_group' %>
      <% blocks.each do |block, options| %>
        <%= link_to t("superb_text_constructor.blocks.#{block}"), new_block_path(template: block), class: 'btn btn-default' %>
      <% end %>
    <% else %>
      <div class="btn-group">
        <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
          <%= t("superb_text_constructor.groups.#{group}") %> <span class="caret"></span>
        </button>
        <ul class="dropdown-menu" role="menu">
          <% blocks.each do |block, options| %>
           <li><%= link_to t("superb_text_constructor.blocks.#{block}"), new_block_path(template: block) %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
  <% end %>
</div>